generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Card {
  id             Int      @id @default(autoincrement())
  title          String
  content        Json     // Array of card codes
  price          Float    @default(199.0)
  availableCount Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  orders Order[]
}

model Order {
  id            String   @id
  cardId        Int
  status        String   @default("pending") // pending, paid, delivered
  paymentTx     String?  // Transaction hash
  sessionId     String   // For tracking user session
  amount        Float    // 支付金额
  walletAddress String   // 钱包地址
  paymentUrl    String   @db.Text // 支付链接
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  card Card @relation(fields: [cardId], references: [id])
}

model Settings {
  id    Int    @id @default(1)
  // Server酱配置
  serverChanKey     String @default("")
  // 邮箱配置
  emailHost         String @default("")
  emailPort         Int    @default(465)
  emailUser         String @default("")
  emailPass         String @default("")
  emailTo           String @default("")
  // 推送开关
  notifyOnCreate    Boolean @default(false)
  notifyOnPaid      Boolean @default(false)
  
  updatedAt DateTime @updatedAt
}

// Telegram转发服务订单
model TelegramOrder {
  id            String   @id
  sourceChannel String   // 监听的频道/群组
  targetChannel String   // 转发到的频道
  textReplaces  Json     @default("[]") // 文本替换规则 [{from, to}]
  keywords      String   @default("") // 过滤关键字，空格分隔
  telegramId    String   @default("") // 用户电报ID
  email         String   @default("") // 用户邮箱
  amount        Float    // 支付金额
  walletAddress String   // 钱包地址
  paymentUrl    String   @db.Text // 支付链接
  paymentTx     String?  // 交易哈希
  status        String   @default("pending") // pending, paid
  expireAt      DateTime? // 服务到期时间
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
