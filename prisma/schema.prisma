generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Card {
  id             Int      @id @default(autoincrement())
  title          String
  content        Json     // Array of card codes
  price          Float    @default(199.0)
  availableCount Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  orders Order[]
}

model Order {
  id            String   @id
  cardId        Int
  status        String   @default("pending") // pending, paid, delivered
  paymentTx     String?  // Transaction hash
  sessionId     String   // For tracking user session
  amount        Float    // 支付金额
  walletAddress String   // 钱包地址
  paymentUrl    String   @db.Text // 支付链接
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  card Card @relation(fields: [cardId], references: [id])
}
